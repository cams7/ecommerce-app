{
  "name": "Customer",
  "base": "PersistedModel",
  "idInjection": false,
  "options": {
    "validateUpsert": true,
    "postgresql": {
      "schema": "ecommerce"
    }
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true,
      "postgresql": {
        "dataType": "VARCHAR",
        "dataLength": 64
      }
    },
    "phone": {
      "type": "string",
      "required": true,
      "postgresql": {
        "dataType": "CHAR",
        "dataLength": 11
      }
    },
    "createdAt": {
      "type": "date",
      "required": true,
      "postgresql": {
        "columnName": "created_at",
        "dataType": "TIMESTAMP"
      }
    },
    "updatedAt": {
      "type": "date",
      "required": true,
      "postgresql": {
        "columnName": "updated_at",
        "dataType": "TIMESTAMP"
      }
    }
  },
  "validations": [],
  "relations": {
    "user": {
      "type": "belongsTo",
      "model": "User",
      "foreignKey": "userId"
    },
    "orders": {
      "type": "hasMany",
      "model": "Order",
      "foreignKey": "customerId"
    },
    "reviews": {
      "type": "hasMany",
      "model": "ProductReview",
      "foreignKey": "customerId"
    }    
  },
  "acls": [],
  "methods": {}
}
